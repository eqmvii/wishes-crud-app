<h1>Wishes...</h1>



<ul data-js="wishes.wishlist">
  {{#each wishes}}
  	<li>ID: {{this.id}} | Wish: {{this.wish}} | <span data-js="{{this.id}}" class="delete-link">Delete</span></li>
  {{/each}}
</ul>

<hr />

<h3>Add a wish!</h3>

<form action="/" method="POST">
	<textarea type="text" name="wish"></textarea>

	<button type="submit">submit your wish!</button>
</form>

